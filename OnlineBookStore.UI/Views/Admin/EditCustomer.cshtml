@using OnlineBookStore.UI.Const
@model OnlineBookStore.UI.Models.ShippingDetailsModel

@{
    ViewBag.Title = "Adit: Edit Customer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    @Html.HiddenFor(x => x.Id)
        <table width="30%">
            <tbody>
                <tr>
                    <td>
                        <h3>Edit:</h3>
                    </td>
                </tr>
                <tr>
                    <td>First: </td>
                    <td>@Html.EditorFor(x => x.FirstName)</td>
                </tr>
                <tr>
                    <td>Last: </td>
                    <td>@Html.EditorFor(x => x.LastName)</td>
                </tr>
                <tr>
                    <td>
                        <h3>Address:</h3>
                    </td>
                </tr>
                <tr>
                    <td>Line 1: </td>
                    <td>@Html.EditorFor(x => x.Line1)</td>
                </tr>
                <tr>
                    <td>Line 2:</td>
                    <td>@Html.EditorFor(x => x.Line2)</td>
                </tr>
                <tr>
                    <td>Line 3:</td>
                    <td>@Html.EditorFor(x => x.Line3)</td>
                </tr>
                <tr>
                    <td>City: </td>
                    <td>@Html.EditorFor(x => x.City)</td>
                </tr>
                <tr>
                    <td>Zip code: </td>
                    <td>@Html.EditorFor(x => x.Zip)</td>
                </tr>
                <tr>
                    <td>Country: </td>
                    <td>@Html.EditorFor(x => x.Country)</td>
                </tr>
                <tr>
                    <td>
                        <input class="actionButtons" type="submit" value="Save" />
                    </td>
                    <td>
                        <input onclick="onReturn();" class="actionButtons" type="button" value="Cancel" />
                    </td>
                </tr>
            </tbody>
        </table>
}
<script type="text/javascript">

    function onReturn() {
        var redirectUrl = '@Url.Action(eAction.Customers, eController.Admin)';
        window.location.href = redirectUrl;
    }

</script>
